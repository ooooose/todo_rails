<% provide(:title, "User list") %>
<% provide(:intro, "ユーザーのリストです。") %>
    <div class="container">
      <div class="row">
        <% @users.each do |user| %>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="box-part alert-primary text-center">
              <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
              <div class="title">
                <br/>
                <%= gravatar_for user %>
                <h3>Name: <%=link_to user.name, user_path(user) %></h3>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>